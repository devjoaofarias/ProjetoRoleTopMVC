@model RoleTopMVC.ViewModels.AdministradorViewModel
<link href="~/css/styleadministrador.css" rel="stylesheet" type="text/css">
<style>
        
            table {
                font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
                border-collapse: collapse;
                width: 90%;
                margin-left: 5%;
                margin-right: 5%;
                background-color: #ffc600;
            }
            td, th {
                text-align: center;
                border: 2px solid black;
                
            }
    
            th {
                font-size: 130%;
                background-color: #dbdada;
            }
            
            </style>

<main> 
    <div id="fundo-img"> 
                        <div id="administrador-barra">
                                <h1>ADMINSTRADOR</h1> 
                        </div>
                       <a id="botao-casinha" href='@Url.Action("Index" , "Home")#a-role-top'> <img id="botao-casinha" src="~/img/botao-casa.png" alt="botao para voltar"> </a> 
                </div>
            <div id="fundo"> 
            <div id="painel">
                <div class="box-status-pedidos aprovados">
                    <h3>Aprovados</h3>
                    <p>@Model.AlugueisAprovados</p>
                </div>
                <div class="box-status-pedidos pendentes">
                    <h3>Pendentes</h3>
                    <p>@Model.AlugueisPendentes</p>
                </div>
                <div class="box-status-pedidos reprovados">
                    <h3>Reprovados</h3>
                    <p>@Model.AlugueisReprovados</p>
                </div>
            </div>
                <table>
                    <thead>
                    <tr>
                        <th>DATA</th>
                        <th>CLIENTE</th>
                        <th>EMAIL</th>
                        <th>NÚMERO</th>
                        <th>STATUS</th>
                        <th>TIPO DE EVENTO</th>
                        <th>PÚBLICO/PRIVADO</th>
                        <th>PACOTES</th>
                        <th>PREÇO</th>
                        <th colspan="2" rowspan="1">ACEITAR</th>
                    </tr>
                    </thead>

                    <tfoot>
                    <tr>
                        <td colspan="11">
                            <p>Pedidos atualizados em @DateTime.Now</p>
                        </td>
                    </tr>
                </tfoot>

                <tbody>
                    <@foreach (var aluguel in Model.Alugueis)
                    {<tr>
                        <td>@aluguel.DataEvento</td>
                        <td>@aluguel.NomeCartao</td>
                        <td>@aluguel.Email</td>
                        <td>@aluguel.Telefone</td>
                        <td>@aluguel.Status</td>
                        <td>@aluguel.tipoEvento</td>
                        <td>@aluguel.publicoPrivado</td>
                        <td>@aluguel.tipoPacote</td>
                        <td>R$:15.000</td>
                        <td><a href='@Url.Action("Aprovar", "Pedido", new {id = @aluguel.Id})'><i class="fas fa-check"></i></a></td>
                        <td><a href='@Url.Action("Reprovar", "Pedido", new {id = @aluguel.Id})'><i class="fas fa-times"></i></a></td>
                        
                    </tr> 
                    }
                    </tbody>
                    
                </table>
                <br>
                <div id="botao-responder"> 
                  <a href=""> <h3>RESPONDER O CHAT</h3> </a>
                </div>
                
            </div>
</main>